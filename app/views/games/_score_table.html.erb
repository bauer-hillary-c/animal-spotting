<div class="score-table">
  <% n = 1 %>
  <% @players.each do |player| %>
    <div class="player-profile">
      <h4>Player #<%= n %></h4>
      <% n += 1 %>
      <p><%= player.username %></p>
      <h5><%= player.scores.find_by(game_id: @game.id).points || "--" %></h5>
    </div>
  <% end %>
</div>
