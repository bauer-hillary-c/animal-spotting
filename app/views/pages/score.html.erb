<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Score Page</h1>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for :scores, url: update_scores_path(game_id: params[:game_id]), html: { multipart: true } do |f| %>
      <div class="form-group">
        <p>
          <%= f.label :player_1 %>
          <%= f.text_field(:player_1_points, class: "form-control") %>
        </p>
      </div>

      <div class="form-group">
        <p>
          <%= f.label :player_2 %>
          <%= f.text_field(:player_2_points, class: "form-control") %>
        </p>
      </div>

      <div class="form-group">
        <p>
          <%= f.submit "Update Score", class: "btn btn-primary" %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
    <p>
      <%= link_to "Back to Game", game_path(params[:game_id]) %>
    </p>
  </div> 
</div>
